{erl_opts, [debug_info]}.
{src_dirs, ["src", "gen/src"]}.

{overrides, [
    {del, jose, [{erl_opts, [warnings_as_errors]}]}
]}.

{profiles, [
    {test, [{src_dirs, ["src", "test", "gen/src", "gen/test"]}]}
]}.

{shell, [{apps, [conduit]}]}.

{project_plugins, [rebar_gleam]}.

{deps, [
    {gleam_stdlib, "~> 0.11"},
    {gleam_http, "~> 1.5"},
    {gleam_elli, "~> 0.2"},
    {elli, "~> 3.3"},
    {gleam_json, "~> 0.1"},
    {gleam_pgo, "~> 0.1"},
    {jose, "~> 1.10"},
    {gleam_otp, "0.1.2"}
]}.
